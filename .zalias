alias killscape="ps auxww |grep netscape | awk '{print \$2}' | xargs kill -KILL; rm -f ~/.netscape/lock"
alias killzilla="ps auxww | grep -i mozilla | awk '{print \$2}' | xargs kill -KILL; find ~/.mozilla -name lock -exec rm {} \;"

