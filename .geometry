 	pisco|haight)
	   BASE_GEOM=1600x1200
	   ;;
	ica)
	   BASE_GEOM=2x1280x1024
	   ;;
 	zabar)
	   BASE_GEOM=1024x768
	   ;;
	jitara)
	   BASE_GEOM=OSX
	   ;;
	*)
	   BASE_GEOM=1280x1024
	   ;;
esac

