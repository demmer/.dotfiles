#!/usr/bin/perl

use IO::Handle;

# option defaults
$host  = "localhost";
$localhost = `hostname`;
chomp($localhost);
$localhost =~ s/\..*//;
$verbose = 0;

sub usage {
    my($err) = @_;
    print "$0: $err.\n";
    print "Usage: [-v] [-host host] \n";
    exit 1;
}

sub debug {
    if ($verbose) {
	print(STDERR "@_\n");
    }
}

LOOP:
while ($#ARGV >= 0) {
    $arg = $ARGV[0]; shift;
    if ($arg eq "-v")	{ $verbose = 1; next LOOP;}
    
    if ($#ARGV < 0) { usage("invalid number of arguments"); }
    $val = $ARGV[0]; shift;
    if ($arg eq "-host") 	{ $host = $val; }
    else 			{ usage("invalid argument $arg"); }
}

$vflag = "";
if ($verbose) {
    $vflag = "-v";
}

$cmd="ssh -x -n $host bin/urlview-pipe $vflag -host $localhost";
debug("running '$cmd' ...");

open(SSH, "$cmd |") || die "can't run pipe";

debug("ssh succeeded");

while (<SSH>) {
    chomp;
    debug "got line $_\n";

    if (/URL/) {
	s/URL //;
	next if ($_ eq "");
	$cmd = "mozilla -remote 'openUrl($_)'";
	debug "$cmd\n";
	system $cmd;
    }
}
