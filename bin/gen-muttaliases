#!/usr/local/bin/perl

if ($#ARGV != 0) {
	print STDERR "usage: $0 <domain>\n";
	exit;
}

while (<STDIN>) {
    chomp;
    # username : passwd : uid : gid : full name : home : shell
    if (!/(.*):.*:([0-9]*):[0-9]*:(.*):.*:.*$/) {
	print "Illegal passwd file line: \"$_\"\n";
	next;
    }
    $username = $1;
    $uid = $2;
    next if $uid < 1000;
    $fullname = $3;
    $fullname =~ s/,.*$//;
	    
    print "alias $username $fullname <$username\@$ARGV[0]>\n";
}

