alias killscape="ps auxww |grep netscape | awk '{print \$2}' | xargs kill -KILL; rm -f ~/.netscape/lock"
alias killzilla="ps auxww | grep mozilla | awk '{print \$2}' | xargs kill -KILL; find ~/.mozilla -name lock -exec rm {} \;"

alias glimpseindex="glimpseindex -B -M 128 -n -o"
alias glimpseindex-cwd="glimpseindex  -H . -t ."
