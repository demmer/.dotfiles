#!/usr/bin/perl
use Time::Local;


sub usage () {
    print "Usage: birthday [ reminder | check ]\n";
    exit 1;
}
    
if ($#ARGV < 0) { usage(); }

$mode = $ARGV[0];

if ($#ARGV == 1) {
    $mailto = $ARGV[1];
} else {
    $mailto = $ENV{USER};
}

if (! ($mode eq "reminder" || $mode eq "check")) {
    usage();
}

$filename = "$ENV{HOME}/.birthdays";

open(F, "<$filename") or die "can't open $filename.";

$oneday = (3600 * 24);

$now = time - (time % $oneday) + $oneday;

%reminders = (
	      $now, 		  "today!!",
	      $now + $oneday,	  "tomorrow.",
	      $now + ($oneday * 7),  "next week.",
	      $now + ($oneday * 14), "in two weeks."
	      );

$msg = "";

while (<F>) {
    chomp;
    next if /^[ \t]*$/;
    next if /^[ \t]*#/;
    
    if (! /[ \t]*([A-Za-z]+)[ \t]*([0-9]+)[ \t]+(.*)$/) {
	print "Malformed line: $_\n";
    }
    $bmname = $1;
    $bday = $2;
    $who = $3;
    
    %months = (
	       January    => 0,
	       February   => 1,
	       March      => 2,
	       April      => 3,
	       May        => 4,
	       June       => 5,
	       July       => 6,
	       August     => 7,
	       September  => 8,
	       October    => 9,
	       November   => 10,
	       December   => 11
	       );
    
    $bmon = $months{$bmname};
    
    if ($bmon eq "") {
	print "$_ (error: invalid month)\n";
	exit 1;
    }

    while (($check, $when) = each %reminders) {
	($sec,$min,$hour,$mday,$mon,$year,$wday,$yday,$x) = localtime($check);

	if ($mon == $bmon && $mday == $bday) {
	    $who .= "'s";
	    $msg .= "It's $who birthday $when ($bmname $bday)\n";
	}
    }
};

if (! $msg eq "") {
    if ($mode eq "check") {
	print $msg;
    }

    if ($mode eq "reminder") {
	open MSG, "| mail -s \"Birthday Reminder\" $mailto" || \
	    die "can't open pipe to mail";
	print MSG "\n$msg";
	close MSG;
    }
}

close F;

